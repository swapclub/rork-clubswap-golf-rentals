# ============================================================================
# ClubSwap Environment Variables
# Copy this file to .env and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Rork Platform (Required for development)
# ----------------------------------------------------------------------------
EXPO_PUBLIC_RORK_API_BASE_URL=https://your-project.rork.app

# ----------------------------------------------------------------------------
# Supabase (Database & Authentication)
# ----------------------------------------------------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL (for migrations and backend)
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# ----------------------------------------------------------------------------
# Stripe (Payments)
# ----------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Connect
STRIPE_CONNECT_CLIENT_ID=ca_your_client_id_here

# ----------------------------------------------------------------------------
# Mapbox (Maps & Geolocation)
# ----------------------------------------------------------------------------
# Get from: https://account.mapbox.com/access-tokens/
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# ----------------------------------------------------------------------------
# Cloudinary (Image Storage)
# ----------------------------------------------------------------------------
# Get from: https://cloudinary.com/console
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_UPLOAD_PRESET=clubswap_listings

# ----------------------------------------------------------------------------
# Twilio (SMS Verification)
# ----------------------------------------------------------------------------
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------------------------
# Email Service (SendGrid or Resend)
# ----------------------------------------------------------------------------
# Option 1: SendGrid (https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=noreply@clubswap.ca
SENDGRID_FROM_NAME=ClubSwap

# Option 2: Resend (https://resend.com/api-keys)
# RESEND_API_KEY=re_your_api_key_here
# RESEND_FROM_EMAIL=noreply@clubswap.ca

# ----------------------------------------------------------------------------
# Firebase (Push Notifications)
# ----------------------------------------------------------------------------
# Get from: Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# FCM Server Key (for legacy push)
FCM_SERVER_KEY=your_fcm_server_key_here

# ----------------------------------------------------------------------------
# Sentry (Error Tracking)
# ----------------------------------------------------------------------------
# Get from: https://sentry.io/settings/projects/
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
SENTRY_ORG=your-org-name
SENTRY_PROJECT=clubswap

# ----------------------------------------------------------------------------
# Analytics
# ----------------------------------------------------------------------------
# Mixpanel (https://mixpanel.com/settings/project/)
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# PostHog (https://app.posthog.com/project/settings)
EXPO_PUBLIC_POSTHOG_KEY=phc_your_key_here
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
NODE_ENV=development
APP_URL=https://clubswap.ca
APP_NAME=ClubSwap
SUPPORT_EMAIL=support@clubswap.ca

# Platform Fees
PLATFORM_FEE_PERCENTAGE=12
STRIPE_FEE_PERCENTAGE=2.9
STRIPE_FEE_FIXED=0.30

# Insurance
INSURANCE_COVERAGE_AMOUNT=100000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-super-secret-session-key-change-this
JWT_SECRET=your-jwt-secret-change-this

# ----------------------------------------------------------------------------
# Development/Testing
# ----------------------------------------------------------------------------
# Set to 'true' to enable debug logging
DEBUG=false

# Set to 'true' to bypass payment processing in development
STRIPE_TEST_MODE=true

# Mock data
USE_MOCK_DATA=false
